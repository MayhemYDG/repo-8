{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "build-app",
            "program": "${workspaceFolder}/rootfs/opt/icloud-photos-sync/src/main.ts",
            "args": ["sync"],
            "outFiles": [
                "${workspaceFolder}/rootfs/opt/icloud-photos-sync/bin/**/*.js",
            ],
            "envFile": "${workspaceFolder}/.vscode/debug-test.env"
        }, {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
              "--experimental-vm-modules",
              "--inspect-brk",
              "${workspaceRoot}/rootfs/opt/icloud-photos-sync/node_modules/.bin/jest",
              "--runInBand",
              "--coverage=true",
              "--config", "jest.config.json",
             // "test/unit/icloud.unit.test.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/rootfs/opt/icloud-photos-sync",
            "envFile": "${workspaceFolder}/.vscode/debug-test.env"
          }
    ]
}