{
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "bin",
    "declaration": true,
    "rootDir": "src",
  },
  "typedocOptions": {
    "entryPoints": ["src/"],
    "out": "docs",
    "excludeExternals": true,
    "entryPointStrategy": "expand",
    "theme": "github-wiki"
  },
  "exclude": [
      "node_modules",
      "bin"
  ],
  "lib": [
    "es2017"
  ]
}