{
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "bin",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "typedocOptions": {
    "entryPoints": ["src/"],
    "out": "docs",
    "excludeExternals": true,
    "entryPointStrategy": "expand",
    "theme": "github-wiki"
  },
  "include": ["src/**/*"],
  "lib": [
    "es2021"
  ]
}