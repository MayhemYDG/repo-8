{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "xo"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-tsdoc"
    ],
    "rules": {
        "quotes": ["error", "backtick"],
        "indent": ["error", 4],
        "eol-last": ["error", "never"],
        "new-cap": ["error", { "newIsCapExceptions": ["iCloud"] }],
        "tsdoc/syntax": "warn",
        "no-unused-vars": ["error", { "args": "none" }]
    }
}
