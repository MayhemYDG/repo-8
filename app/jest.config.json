{
    "preset": "ts-jest/presets/default-esm-legacy",
    "testEnvironment": "node",
    "testRegex": "\\.test\\.ts$",
    "clearMocks": true,
    "resetMocks": true,
    "slowTestThreshold": 10,
    "reporters": [
      "default",
      "github-actions"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/main.ts",
      "!src/lib/package.ts",
      "!src/lib/cli.ts",
      "!src/lib/logger.ts",
      "!src/lib/photos-library/model/photos-entity.ts"
    ],
    "coverageProvider": "v8",
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "\\.[jt]sx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      ".*/logger.js": "<rootDir>/test/_helpers/mock_logger.ts",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }